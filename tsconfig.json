{
  "compilerOptions": {
    //definindo que ao compilar, os arquivos js serão gerados na pasta dist/js
    "outDir": "./dist/js",
    //definindo que os arquivos js serão gerados no formato ES6
    "target": "ES6",
    // definindo que o compilador não irá gerar arquivos js para os arquivos ts compilados com erro
    "noEmitOnError": true,
    // define que o compilador não irá aceitar variáveis com tipo implícito
    "noImplicitAny": true,
    // define que os comentários do arquivo ts não serão compilados para o arquivo js
    "removeComments": true,
    // obriga a não atribuição de valores nulos ou indefinidos
    "strictNullChecks": true,
    // informa ao compilador que será utilizado decorators
    "experimentalDecorators": true
  },
  //definindo quais arquivos serão compilados
  "include": [
    "app/**/*"
  ]
}